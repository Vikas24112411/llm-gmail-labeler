{
  "name": "llm-gmail-labeler",
  "version": "1.0.0",
  "description": "AI-powered Gmail labeling assistant with React frontend and Python backend",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install",
    "start:backend": "cd backend && python3 api_server.py",
    "start:frontend": "cd frontend && npm start",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "clean": "rm -rf frontend/node_modules frontend/build backend/__pycache__ backend/data/faiss.index"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "gmail",
    "ai",
    "labeling",
    "ollama",
    "react",
    "python",
    "fastapi"
  ],
  "author": "LLM Gmail Labeler",
  "license": "MIT"
}
